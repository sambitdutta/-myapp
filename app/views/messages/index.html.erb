<div class="row">
  <div class="col-sm-12">
    <h3>Messages</h3>
    <hr />
  </div>
</div>

<div class="row">
  <div class="col-3">
    <div class="list-group" role="tablist">
      <% @messages.each_with_index do |message, index| %>
        <a class="list-group-item list-group-item-action <%= index == 0 ? 'active show' : '' %>" data-toggle="tab" href="#list-<%= message.id %>" role="tab" aria-controls="list-<%= message.id %>" aria-selected="true">
          <%= message.subject %>
          <br/>
          <%= message.created_at %>
        </a>
      <% end %>
    </div>
  </div>
  <div class="col-9">
    <div class="tab-content" id="nav-tabContent">
      <% @messages.each_with_index do |message, index| %>
        <div class="tab-pane fade <%= index == 0 ? 'active show' : '' %>" id="list-<%= message.id %>" role="tabpanel">
          <div class="card">
            <div class="card-body">
              <%= message_body(message) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
