<div class="row">
  <%= form_for :password_reset, url: password_resets_path, html: { class: 'col-md-6 offset-md-3' } do |f| %>
    <div class="card">
      <div class="card-body">
        <h3 class="title">Confirm email</h3>
        <hr class="divisor">
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <br />
        <button type="submit" class="btn btn-primary topBtn">
          <i class="fa fa-sign-in"></i> Submit
        </button>
      </div>
    </div>
  <% end %>
</div>
